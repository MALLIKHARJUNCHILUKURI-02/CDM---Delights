<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/styles/menu.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@400;700;900&display=swap"
        rel="stylesheet">

        
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <title>CDM - Restaurant Menu</title>
</head>

<body>
    <h1 class="menuheading">CDM Restaurant Menu</h1>
    <% if(admin){ %>
    <!-- <a class="add" href="/add">Add New Item</a> -->
    <a class="btn btn-primary" href="/add" role="button">Add New Item</a>
    <!-- <a class="menuhome" href="/">Home</a> -->
    <a class="btn btn-primary" href="/" role="button">Home</a>
    <% } else { %>
        <!-- <a class="menuhome" href="/">Home</a> -->
        <a class="btn btn-primary" href="/" role="button">Home</a>
        <% } %>
    <ul class="menu">
        <% if(admin){ %>
            <% menuItems.forEach(item=> { %>
                <li>
                    <strong>
                        <%= item.name %>
                    </strong> <span>
                        <%= item.category %> - ₹<%= item.price %>
                    </span><br>
                    <em>
                        <%= item.description %>
                    </em><br>
                    <div class="edit_delete">
                        <form action="/delete/<%= item.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                        
                        <a class="btn btn-primary" href="/edit/<%= item.id %>" role="button">Edit</a>
                    </div>

                </li>
                <% }) %>
                    <% } else {%>
                        <% menuItems.forEach(item=> { %>
                            <li>
                                <strong>
                                    <%= item.name %>
                                </strong> <span>
                                    <%= item.category %> - ₹<%= item.price %>
                                </span><br>
                                <em>
                                    <%= item.description %>
                                </em><br>
                                <div class="order">
                                    <a class="btn btn-primary" href="/order/<%= item.id %>" role="button">Order Now</a>
                                </div>

                            </li>
                            <% }) %>
                        <% } %>
    </ul>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>